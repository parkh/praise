<div class="row">
  <div class="medium-5 columns">
    <h3><%= @song %></h3>
    <hr>
    <%= simple_format @song.lyric %>
  </div>
  <div class="medium-7 columns">
    <h3>Comments</h3>
    <hr>
    <% props = JSON.parse("{ \"songId\": #{@song.id}, \"comments\": #{raw(render(template: 'comments/index.json.jbuilder'))} }") %>
    <% if params[:client].present? %>
      <%= isomorphic( 'CommentSection', 'cs', props ) %>
    <% else %>
      <%= client( 'CommentSection', 'cs', props ) %>
    <% end %>
  </div>
  
</div>
